\subsection{Reliability Monitor}

\begin{schema}{ReliabilityMonitor}
    failureTraceLog: FailureTraceBuffer \\
%\where
\end{schema}

\begin{schema}{FailureTraceBuffer}
    GenericCircularBuffer[Failure] \\
