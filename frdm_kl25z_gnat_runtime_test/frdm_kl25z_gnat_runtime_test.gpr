project frdm_kl25z_gnat_runtime_test is

   for Languages use ("ada");

   for Main use ("frdm_kl25z_gnat_runtime_test.adb");
   for Source_Dirs use (".",
                        "../building_blocks/portable",
                        "../building_blocks/arm_cortex_m0plus",
                        "../building_blocks/nxp_kinetis_kl25z",
                        "../building_blocks/frdm_kl25z");
   for Object_Dir use "obj";

   package Compiler is
      for Default_Switches ("ada") use ("-g", "-gnatwa", "-gnatQ", "-gnat12");
      for Local_Configuration_Pragmas use "../gnat_pragmas.adc";
   end Compiler;

   package Builder is
      for Default_Switches ("ada") use ("-g", "-O0");
   end Builder;

   for Runtime ("Ada") use "ravenscar-sfp-kinetis_kl25z_frdm";
   for Target use "arm-eabi";

   package Ide is
      for Program_Host use "localhost:4242";
      for Communication_Protocol use "remote";
   end Ide;

end frdm_kl25z_gnat_runtime_test;

