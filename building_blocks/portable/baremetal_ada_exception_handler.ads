--
--  @summary Bare-metal Ada exception handler.
--

with System;

package Baremetal_Ada_Exception_Handler with No_Elaboration_Code_All is

   --
   --  Subprogram invoked from Raise_Exception and from Last_Chance_Handler
   --
   procedure Baremetal_Ada_Exception_Handler (Msg : String; Line : Integer)
     with No_Return,
          Export,
          External_Name => "baremetal_ada_exception_handler";

   --
   --  Subprogram invoked from code generated by the GNAT compiler
   --
   procedure Last_Chance_Handler (Msg : System.Address; Line : Integer)
     with No_Return,
          Export,
          Convention => C,
          External_Name => "__gnat_last_chance_handler";

end Baremetal_Ada_Exception_Handler;
